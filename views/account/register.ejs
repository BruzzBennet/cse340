<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
        <div>
            <form id="registerForm" action="/account/register" method="post">
                <label for="account_firstname">First Name:
                    <br>
                    <input type="text" id="account_firstname" name="account_firstname" required>
                </label>
                <br>
                <label for="account_lastname">Last Name:
                    <br>
                    <input type="text" id="account_lastname" name="account_lastname" required>
                </label>
                <br>
                <label for="account_email">Email:
                    <br>
                    <input type="email" id="account_email" name="account_email" required>
                </label>
                <br>
                <label for="account_password">Password:
                    <br>
                    <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                </label>
                <p>The password must include: </p>
                <ul> 
                    <li>12 characters in length, minimum</li>
                    <li>at least 1 capital letter</li>
                    <li>at least 1 number</li>
                    <li>at least 1 special character</li>
                </ul>
                <br>
                <input type="submit" value="Sign Up">
            </form>
        </div>