<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    <%- messages() %>
<div>
    <form id="loginForm" action="/account/login" method="post">
        <label for="email">Email:
            <br>
            <input type="email" id="account_email" name="account_email" required>
        </label>
        <br>
        <label for="password">Password:
            <br>
            <input type="password" id="password" name="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </label> 
        <p>The password must include: </p>
                <ul> 
                    <li>12 characters in length, minimum</li>
                    <li>at least 1 capital letter</li>
                    <li>at least 1 number</li>
                    <li>at least 1 special character</li>
                </ul>
        <br>
        <input type="submit" value="Login">
   </form>
   <p>No Account? <a href="/account/register">Sign Up</a></p>
</div> 